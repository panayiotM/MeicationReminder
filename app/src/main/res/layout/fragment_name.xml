<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_900">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="401dp"
                android:layout_height="547dp"
                android:layout_marginTop="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="473dp"
                    android:background="@color/light_blue_50">

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="107dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/nexbtn"
                        app:layout_constraintTop_toBottomOf="@+id/editDescription"
                        tools:context=".Horizontal_ScrollView"
                        tools:layout_editor_absoluteX="0dp">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/medIcon11"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="15dp"
                                        app:srcCompat="@drawable/ic_tablet" />
                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/medIcon33"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="15dp"


                                        app:srcCompat="@drawable/ic_drops" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/medIcon44"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="15dp"


                                        app:srcCompat="@drawable/ic_powder" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/medIcon55"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="15dp"
                                        app:srcCompat="@drawable/ic_liquid"
                                        tools:ignore="VectorDrawableCompat" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/medIcon66"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="15dp"


                                        app:srcCompat="@drawable/ic_drops2" />
                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/medIcon88"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="15dp"


                                        app:srcCompat="@drawable/ic_injections" />
                                </LinearLayout>


                            </LinearLayout>

                        </HorizontalScrollView>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="395dp"
                        android:layout_height="77dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif-black"
                        android:text="What medication would you like to add today ?"
                        android:textColor="@color/blue"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.583"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_goneMarginStart="30dp" />

                    <EditText
                        android:id="@+id/editDescription"
                        android:layout_width="376dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="196dp"
                        android:background="@color/light_blue_900"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        android:drawableLeft="@drawable/baseline_home_24"
                        android:drawablePadding="8dp"
                        android:hint="Description"
                        android:inputType="textPersonName"
                        android:lineSpacingExtra="8sp"
                        android:lines="2"
                        android:linksClickable="false"
                        android:paddingStart="12dp"
                        android:paddingLeft="8dp"
                        android:textColor="@color/light_blue_50"
                        android:textColorHint="@color/light_blue_50"
                        android:textCursorDrawable="@color/light_blue_50"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.48"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/editMedName"
                        android:layout_width="374dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="36dp"
                        android:background="@color/light_blue_900"
                        android:drawableStart="@android:drawable/ic_menu_recent_history"
                        android:drawableLeft="@drawable/baseline_home_24"
                        android:drawablePadding="8dp"
                        android:hint="Medication name"
                        android:inputType="textPersonName"
                        android:paddingStart="12dp"
                        android:paddingLeft="8dp"
                        android:singleLine="false"
                        android:textColor="@color/light_blue_50"
                        android:textColorHint="@color/light_blue_50"
                        android:textCursorDrawable="@color/white"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/editDescription"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.444"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/nexbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="151dp"
                        android:layout_marginEnd="156dp"
                        android:layout_marginBottom="16dp"
                        android:text="Next"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.833"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</RelativeLayout>