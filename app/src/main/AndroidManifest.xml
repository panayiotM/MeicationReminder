<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:background="@color/sky"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Medication Reminder"
        android:supportsRtl="true"
        android:theme="@style/Theme.Medreminder3"
        tools:targetApi="31">

        <activity android:name=".RegisterUser" />
        <activity android:name=".forgotPass" />
        <activity android:name=".Menu" />
        <activity android:name=".add_medicine" />
        <activity android:name=".EditMedicineView"/>


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Medication Reminder"
            android:theme="@style/Theme.Medreminder3.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>